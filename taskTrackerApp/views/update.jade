extends layout

block content
  div.container-fluid.col-md-6
    .alert.alert-info
      h1(style='text-align: center')= title     
      .container-fluid

          .form-area.alert-warning
            form(name="update",method="post",action="/updatetask/#{task.id}")
              br(style='clear:both')
              h3(style='margin-bottom: 25px; text-align: center;') Update Task Form
              .form-group
                input#inputTaskName.form-control(type='text', name='task', placeholder='#{task.task}', required='')
              .form-group
                input#inputTaskDesc.form-control(type='text', name='desc', placeholder='#{task.description}', required='')
              button#submit.btn.btn-primary.pull-right(type='submit', name='updatetask') Update Task
              button.btn.btn-primary.pull-left() 
                  a(style="color: #ffffff" href="/") CANCEL 